<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="rrapps.myplaces" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="rrapps.myplaces.MyPlacesApplication"
        android:allowBackup="true"
        android:icon="@drawable/m_places_launcher_256"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="rrapps.myplaces.view.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="rrapps.myplaces.view.activities.LocationDetailsActivity"
            android:label="@string/title_activity_location_details" >
        </activity>

    </application>
</manifest>
